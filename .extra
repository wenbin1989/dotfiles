# bash-completion
if [ -f $(brew --prefix)/etc/bash_completion ]; then
    . $(brew --prefix)/etc/bash_completion
fi

# rbenv
if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi

# Git credentials
# Not in the repository, to prevent people from accidentally committing under my name
GIT_AUTHOR_NAME="wenbin1989"
GIT_COMMITTER_NAME="$GIT_AUTHOR_NAME"
git config --global user.name "$GIT_AUTHOR_NAME"
GIT_AUTHOR_EMAIL="wenbin1989@gmail.com"
GIT_COMMITTER_EMAIL="$GIT_AUTHOR_EMAIL"
git config --global user.email "$GIT_AUTHOR_EMAIL"

# alias
alias d="cd ~/Dropbox"
alias p="cd ~/Repos"
alias s="svn"
alias m="mvim"

alias grep="grep --color"
alias egrep="egrep --color"
alias fgrep="fgrep --color"

alias qta="open $(brew --prefix qt)/Assistant.app"
alias qtd="open $(brew --prefix qt)/Designer.app"
alias qtl="open $(brew --prefix qt)/Linguist.app"

alias update='sudo softwareupdate -i -a; brew update; brew upgrade; brew cleanup; npm update npm -g; npm update -g; sudo gem update --system; rbenv rehash'
